@using PotPlayerAPI.ViewModels.VideoFiles
@model IEnumerable<PotPlayerAPI.ViewModels.VideoFiles.VideoViewModel>

@*<h3>@ViewBag.TableTitle</h3>*@
<table class="table table-striped">
<thead class="thead-default">
    <tr>
        <th><a asp-controller="VideoFiles" asp-action="Index" asp-route-sortParamMovie="@ViewBag.Mov1" asp-route-sortParamTvShows="@ViewBag.Tv1">
            Title
            @if (ViewBag.CurrentSortAlt == "name")
            {
                <i class="fa fa-angle-double-up" aria-hidden="true"></i>
            }
            else if (ViewBag.CurrentSortAlt == "name_desc")
            {
                <i class="fa fa-angle-double-down" aria-hidden="true"></i>
            }
        </a></th>
        <th class="hidden-md-down"><a asp-controller="VideoFiles" asp-action="Index" asp-route-sortParamMovie="@ViewBag.Mov2" asp-route-sortParamTvShows="@ViewBag.Tv2">
            Subtitles
            @if (ViewBag.CurrentSortAlt == "subtitles")
            {
                <i class="fa fa-angle-double-up" aria-hidden="true"></i>
            }
            else if (ViewBag.CurrentSortAlt == "subtitles_desc")
            {
                <i class="fa fa-angle-double-down" aria-hidden="true"></i>
            }
        </a></th>
        <th></th>
    </tr>
</thead>

    <tbody>
    @foreach (VideoViewModel movie in Model)
    {
        <tr>
            <td><a asp-controller="VideoFiles" asp-action="PlayVideo" asp-route-videoPath="@movie.FullPath">@movie.Name</a></td>
            <td class="hidden-md-down">
                @if (movie.HasSubtitles)
                {
                    <i class="fa fa-check text-success" aria-hidden="true"></i>
                }
                else
                {
                    <i class="fa fa-times text-danger" aria-hidden="true"></i>
                }
            </td>
            <td>
                <a class="btn btn-sm btn-primary" asp-controller="VideoFiles" asp-action="PlayVideo" asp-route-videoPath="@movie.FullPath">Play</a>
            </td>
        </tr>
    }
    </tbody>
</table>

